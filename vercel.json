{
  "version": 2,
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "framework": "vite",
  "functions": {
    "api/*.js": {
      "runtime": "nodejs20.x"
    }
  },
  "routes": [
    { "src": "/api/projects/(?<id>[^/]+)", "dest": "/api/projects_[id].js" },
    { "src": "/api/projects", "dest": "/api/projects.js" }
  ],
  "env": {
    "MONGODB_URI": "@mongo-uri",
    "VITE_DEFAULT_PROJECT_ID": "demo"
  }
}


